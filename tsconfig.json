{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "types": [
      "mongoose",
      "node"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "newLine": "LF",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@utils/*": [ "./src/utils/*", "./dist/utils/*" ],
      "@models/*": [ "./src/models/*", "./dist/models/*" ],
      "@decorators/*": [
        "./src/modules/common/decorators/*.decorator",
        "./dist/modules/common/decorators/*.decorator"
      ],
      "@pipes/*": [
        "./src/modules/common/pipes/*.pipe",
        "./dist/modules/common/pipes/*.pipe"
      ],
      "@guards/*": [
        "./src/modules/common/guards/*.guard",
        "./dist/modules/common/guards/*.guard"
      ],
      "@dtos/*": [
        "./src/modules/common/dtos/*.dto",
        "./dist/modules/common/dtos/*.dto"
      ],
      "@services/*": [
        "./src/modules/common/services/*.service",
        "./dist/modules/common/services/*.service"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist"
  ]
}